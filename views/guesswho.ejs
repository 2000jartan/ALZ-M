QUESTIONS:
<p></p>
<form action="/guesswho/checkanswer" method="POST">
<%var i=0%>
<%for(var question of all_questions){%>
  <%i+=1%>
  <img id="relpic"  src="data:image/<%=question.photo.contentType%>;base64, 
                     <%=question.photo.data.toString('base64')%>">
  <p></p>
  OPTIONS:

  
    <div class="form-row align-items-center">
        <div class="custom-control custom-radio">
            <input type="radio" id=<%="customRadio"+i%> name=<%="Choice"+i%> class="custom-control-input" value="<%=question.options[0]%>">
            <label class="custom-control-label" for=<%="customRadio"+i%>><%=question.options[0]%></label>

            <input type="radio" id="customRadio1" name=<%="Choice" + i %> class="custom-control-input" value="<%=question.options[1]%>">
            <label class="custom-control-label" for="customRadio1"><%=question.options[1]%></label>
        </div>
          

      
</div>
  
  
<%}%>
<div class="col-auto my-1">
  <button type="submit" class="btn btn-primary">Submit</button>
</div>
</div>
</form>






    
